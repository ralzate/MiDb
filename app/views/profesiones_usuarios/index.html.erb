<%- model_class = ProfesionesUsuario -%>
<div class="page-header">
  <h1>Profesiones Usuarios</h1>
</div>

<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
Buscar:
<%= text_field_tag :search, params[:search], :placeholder => "Buscador Profesiones Usuarios" %>
<%= submit_tag "Consultar", :name => nil %>
<% end %>
<% end %>
<br />

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>usuario_id</th>
      <th>profesion_id</th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
   <%= render @profesiones_usuarios %>
 </tbody>
</table>
<%= link_to image_tag('nuevo.png',),  new_profesiones_usuario_path,  :remote => true, :rel => "tooltip", :title => "Ingresar Nueva Profesion Usuario", :class => "btn btn-link " %>

<br />
<br />
<div align="center">
  <%= will_paginate @profesiones_usuarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>
<div align="center">
  Total Profesiones Usuarios : <%= @profesiones_usuarios.total_entries %>
</div>