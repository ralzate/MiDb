<%= simple_form_for(@profesion, :html => { :multipart => true, :remote => true }) do |f| %>
<div class="user">
	<div class="modal-header">
		<h4 class="modal-title"><h3>Datos Profesión</h3></h4>
	</div><br>
	<div class="row">
		<div class="col-md-4">
			Nombre:
		</div>
		<div class="col-md-6">
			<%= f.input :nombre, :label => false,  :required => true %>
		</div>
		<div class="col-md-4">
			Descripción:
		</div>
		<div class="col-md-6">
			<%= f.input :descripcion, :label => false,  :required => true  %>
		</div>
	</div>
</div>
<div class="modal-footer">
	<%= f.submit "Guardar", :class => 'btn btn-primary' %>
	<a href="#" class="btn btn-default" onclick="$.lazybox.close()">Cerrar</a>
</div>
<% end %>