<%= javascript_include_tag "fecha" %>

<%= simple_form_for(@experiencia_laboral, :html => { :multipart => true, :remote => true }) do |f| %>
<div class="user">
  <div class="modal-header">
    <h4 class="modal-title"><h3>Datos Profesión Usuario</h3></h4>
  </div><br>
  <div class="row">
    <div class="col-md-4">
      Empresa:
    </div>
    <div class="col-md-6">
      <%= f.input :empresa, :label => false,  :required => true %>
    </div>
    <div class="col-md-4">
      Cargo:
    </div>
    <div class="col-md-6">
      <%= f.input :cargo, :label => false,  :required => true  %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Telefono:
    </div>
    <div class="col-md-6">
      <%= f.input :telefono, :label => false,  :required => true %>
    </div>
    <div class="col-md-4">
      Usuario:
    </div>
   
  </div>
  <div class="row">
    <div class="col-md-4">
      Fecha Inicio:
    </div>
    <div class="col-md-6">
        <%= f.input :fecha_incio, :as => :string, :label => false, :required => true,  :input_html => {  :class => "datepicker " } %>
    </div>
    <div class="col-md-4">
      Fecha Terminación:
    </div>
    <div class="col-md-6">
      <%= f.input :fecha_terminacion, :as => :string, :label => false, :required => true,  :input_html => {  :class => "datepicker " } %>
    </div>
    <%= f.hidden_field :usuario_id, :value => current_user.id %>
  </div>

</div>
<div class="modal-footer">
  <%= f.submit "Guardar", :class => 'btn btn-primary' %>
  <a href="#" class="btn btn-default" onclick="$.lazybox.close()">Cerrar</a>
</div>
<% end %>