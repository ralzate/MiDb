<%= form_for @experiencia_laboral, :html => { :class => "form-horizontal experiencia_laboral" } do |f| %>

  <% if @experiencia_laboral.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@experiencia_laboral.errors.count, "error") %> prohibited this experiencia_laboral from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @experiencia_laboral.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :empresa, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :empresa, :class => 'form-control' %>
    </div>
    <%=f.error_span(:empresa) %>
  </div>
  <div class="form-group">
    <%= f.label :cargo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cargo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cargo) %>
  </div>
  <div class="form-group">
    <%= f.label :telefono, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :telefono, :class => 'form-control' %>
    </div>
    <%=f.error_span(:telefono) %>
  </div>
  <div class="form-group">
    <%= f.label :fecha_incio, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :fecha_incio, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fecha_incio) %>
  </div>
  <div class="form-group">
    <%= f.label :fecha_terminacion, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :fecha_terminacion, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fecha_terminacion) %>
  </div>
  <div class="form-group">
    <%= f.label :usuario_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :usuario_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:usuario_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                experiencias_laborales_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
