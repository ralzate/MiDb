<%- model_class = InformacionAcademica -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tipo_de_dato) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:fecha_terminacion) %></th>
      <th><%= model_class.human_attribute_name(:titulo_obtenido) %></th>
      <th><%= model_class.human_attribute_name(:usuario_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @informaciones_academicas.each do |informacion_academica| %>
      <tr>
        <td><%= link_to informacion_academica.id, informacion_academica_path(informacion_academica) %></td>
        <td><%= informacion_academica.tipo_de_dato %></td>
        <td><%= informacion_academica.nombre %></td>
        <td><%= informacion_academica.fecha_terminacion %></td>
        <td><%= informacion_academica.titulo_obtenido %></td>
        <td><%= informacion_academica.usuario_id %></td>
        <td><%=l informacion_academica.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_informacion_academica_path(informacion_academica), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      informacion_academica_path(informacion_academica),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_informacion_academica_path,
            :class => 'btn btn-primary' %>
