<%- model_class = EstudiosComplementario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:entidad) %></th>
      <th><%= model_class.human_attribute_name(:fecha_terminacion) %></th>
      <th><%= model_class.human_attribute_name(:intensidad_horaria) %></th>
      <th><%= model_class.human_attribute_name(:usuario_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @estudios_complementarios.each do |estudios_complementario| %>
      <tr>
        <td><%= link_to estudios_complementario.id, estudios_complementario_path(estudios_complementario) %></td>
        <td><%= estudios_complementario.nombre %></td>
        <td><%= estudios_complementario.entidad %></td>
        <td><%= estudios_complementario.fecha_terminacion %></td>
        <td><%= estudios_complementario.intensidad_horaria %></td>
        <td><%= estudios_complementario.usuario_id %></td>
        <td><%=l estudios_complementario.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_estudios_complementario_path(estudios_complementario), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      estudios_complementario_path(estudios_complementario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_estudios_complementario_path,
            :class => 'btn btn-primary' %>
