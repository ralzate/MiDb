<%= form_for @estudios_complementario, :html => { :class => "form-horizontal estudios_complementario" } do |f| %>

  <% if @estudios_complementario.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@estudios_complementario.errors.count, "error") %> prohibited this estudios_complementario from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @estudios_complementario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nombre) %>
  </div>
  <div class="form-group">
    <%= f.label :entidad, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :entidad, :class => 'form-control' %>
    </div>
    <%=f.error_span(:entidad) %>
  </div>
  <div class="form-group">
    <%= f.label :fecha_terminacion, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :fecha_terminacion, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fecha_terminacion) %>
  </div>
  <div class="form-group">
    <%= f.label :intensidad_horaria, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :intensidad_horaria, :class => 'form-control' %>
    </div>
    <%=f.error_span(:intensidad_horaria) %>
  </div>
  <div class="form-group">
    <%= f.label :usuario_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :usuario_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:usuario_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                estudios_complementarios_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
